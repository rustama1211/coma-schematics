{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsKnexMigrationMake",
  "title": "Knex Make Migration Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of migration name.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use name?"
    },
    "moduleName": {
      "type": "string",
      "description": "The module name to create migration"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the module."
    },
    "module": {
      "type": "string",
      "format": "path",
      "description": "The path to import the module."
    },
    "language": {
      "type": "string",
      "description": "Nest module language (ts/js)."
    },
    "sourceRoot": {
      "type": "string",
      "description": "Nest module source root directory."
    },
    "skipImport": {
      "type": "boolean",
      "description": "Flag to skip the module import.",
      "default": false
    },
    "crud": {
      "type": "boolean",
      "description": "When true, CRUD entry points are generated.",
      "default": true
    },
    "flat": {
      "type": "boolean",
      "default": false,
      "description": "Flag to indicate if a directory is created."
    }
  },
  "required": ["name"]
}
